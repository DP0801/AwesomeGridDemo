<div class="efield">
    <div class="elabel">
        @{
            var postfix = ViewData.ModelMetadata.AdditionalValues.ContainsKey("__idpostfix") ? ViewData.ModelMetadata.AdditionalValues["__idpostfix"] : string.Empty;
        }
        @Html.Label("", new {@for = HttpContext.Current.Items[Settings.ContextKey] + ViewData.TemplateInfo.GetFullHtmlFieldId(string.Empty) + postfix})
        @*@(ViewData.ModelMetadata.IsRequired? "*" : "")*@
    </div>
    <div class="einput">
        @RenderBody()
    </div>
    @Html.ValidationMessage("")
</div>