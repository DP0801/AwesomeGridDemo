@model AwesomeMvcDemo.ViewModels.Input.GridDemoSortingCfgInput

@(Html.Awe().Grid("SortingGrid")
    .Columns(
        new Column{Bind = "Id", Width = 75}, 
        new Column{Bind = "Person", Sortable = Model.PersonSortable, SortRank = Model.PersonRank, Sort = Model.PersonSort}, 
        new Column{Bind = "Food", Sortable = Model.FoodSortable, SortRank = Model.FoodRank, Sort = Model.FoodSort}, 
        new Column{Bind = "Date", Width = 150}, new Column{Bind = "Price", Width = 80, ClientFormat = ".(Price)&pound;"}, 
        new Column{Bind = "Location"})
    .Height(350)
    .SingleColumnSort(Model.SingleColumnSort)
    .Sortable(Model.Sortable)
    .Url(Url.Action("GetItems","LunchGrid")))